{
  "name": "beatsaver-electron",
  "version": "1.0.0",
  "description": "An Electron app wrapping BeatSaver which adds duplicate song detection and other features",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/mainThread/main.js",
    "hash": "npm run build && node ./dist/utils/hashes.js",
    "postinstall": "cd svelte && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JakeCover/BeatSaverElectron.git"
  },
  "keywords": [
    "beatsaber",
    "beatsaver",
    "scoresaver",
    "mods"
  ],
  "author": "Cobular",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JakeCover/BeatSaverElectron/issues"
  },
  "homepage": "https://github.com/JakeCover/BeatSaverElectron#readme",
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^13.1.8",
    "electron-builder": "^22.11.7",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "arrowParens": "always"
  },
  "dependencies": {
    "electron-store": "^8.0.0"
  }
}
