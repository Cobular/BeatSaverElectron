{
  "name": "beatsaver-electron",
  "version": "1.0.0",
  "description": "An Electron app wrapping BeatSaver which adds duplicate song detection and other features",
  "main": "dist/mainThread/main.js",
  "scripts": {
    "nodemon": "nodemon",
    "start": "npm run compile && electron .",
    "svelte:dev": "cd svelte && npm run dev",
    "svelte:build": "cd svelte && npm run build",
    "compile": "tsc",
    "out:win": "npm run svelte:build && npm run compile && electron-builder build --win --publish never",
    "publish:win": "npm run svelte:build && npm run compile && electron-builder build --win --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JakeCover/BeatSaverElectron.git"
  },
  "keywords": [
    "beatsaber",
    "beatsaver",
    "scoresaver",
    "mods"
  ],
  "author": "Cobular",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JakeCover/BeatSaverElectron/issues"
  },
  "homepage": "https://github.com/JakeCover/BeatSaverElectron#readme",
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^13.1.8",
    "electron-builder": "^22.11.7",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5",
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.12"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "arrowParens": "always"
  },
  "dependencies": {
    "electron-store": "^8.0.0",
    "electron-reload": "^1.5.0",
    "electron-serve": "^1.1.0",
    "electron-updater": "^4.3.9"
  }
}
